<div class="container">
  <h1>Add a dose</h1>
  <div class="form">
    <%= simple_form_for ([@cocktail, @dose]) do |f| %>
      <%= f.input :description, class: "input" %>
      <%= f.association :ingredient, class: "input" %>
      <%= f.submit "Add dose", class: "btn btn-primary" %>
    <% end %>
  </div>
  <p><%= link_to "Cancel", cocktail_path(@cocktail), class: "btn btn-primary btn-cancel"%></p>
</div>
